debug:
	
	
	@echo "\n🤖️⚽️ Robot4 - Portugal Open 2023 🏅️ \n"
	@echo "🔛️📲️ Permissions to Serial Ports..."
	@if echo "lar\n"  @| sudo -S chmod 777 /dev/ttyUSB0; then\
		echo "lar\n";\
		echo "\n✅️📲️ Serial Port ttyUSB0 ready!";\
		echo 0,0,0,0,0,0 > /dev/ttyUSB0;\
		echo "🔛️🏗️  Opening Server Yolo";\
		cd python && python3 Server.py &;\
		echo "🔛️🏗️  Building program...";\
		go run . ttyUSB0 1 $(ID) $(IP) $(BS);\
		echo "✅️💻️ Program starting...";\
	else echo "lar\n"  @| sudo -S chmod 777 /dev/ttyUSB1; \
		echo "\n✅️📲️ Serial Port ttyUSB1 ready!";\
