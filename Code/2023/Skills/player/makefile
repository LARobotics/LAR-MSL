gen_grpc:
	@if python3 -m grpc_tools.protoc -I. --python_out=python --grpc_python_out=python message.proto; then echo "✅️🔗️ gRPC Generated to Python..."; else echo "❌️🔗️ gRPC not Generated to Python..."; fi
	
	@if go generate; then echo "✅️🔗️ gRPC Generated to Go..."; else echo "❌️🔗️ gRPC not Generated to Go..."; fi


