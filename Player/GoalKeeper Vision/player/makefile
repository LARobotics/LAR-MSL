####### Compiler, tools and options   go run . ttyUSB0 0

all:
	echo 0,0,0,0,0,0 > /dev/ttyUSB0

run_sp0wtBS:
	echo "lar" 
	sudo -S chmod 777 /dev/ttyUSB0 
	go run . ttyUSB0 0
	echo 0,0,0,0,0,0 > /dev/ttyUSB0
run_sp1wtBS:
	echo "lar" 
	sudo -S chmod 777 /dev/ttyUSB1 
	go run . ttyUSB1 0
	echo 0,0,0,0,0,0 > /dev/ttyUSB1
run_sp0wBS:
	echo "lar" 
	sudo -S chmod 777 /dev/ttyUSB0 
	go run . ttyUSB0 1

run_sp1:
	sudo chmod 777 /dev/ttyUSB1
	lar
	go run . ttyUSB1
	
test_kinect:
	freenect-glview

stopHW:
	echo 0,0,0,0,0,0 > /dev/ttyUSB0
	
